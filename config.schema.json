{
    "pluginAlias": "IndexCounter",
    "pluginType": "accessory",
    "singular": false,
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Name",
                "type": "string",
                "required": true
            },
            "max": {
                "title": "Maximum Index",
                "type": "number",
                "default": 5,
                "description": "The maximum index to allow"
            },
            "randomizeAfterDelay": {
                "title": "Randomize After Delay?",
                "type": "boolean",
                "default": true,
                "description": "If set, the counter will pick a new random number after the specified delay."
            },
            "delay": {
                "title": "Delay",
                "type": "number",
                "default": 300000,
                "description": "How long after the index is changed to randomize, in milliseconds."
            }
        }
    }
}
