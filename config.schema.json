{
    "pluginAlias": "IndexCounter",
    "pluginType": "accessory",
    "singular": false,
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Name",
                "type": "string",
                "required": true
            },
            "max": {
                "title": "Maximum Index",
                "type": "number",
                "default": 5,
                "description": "The maximum index to allow"
            },
            "time": {
                "title": "Reset After",
                "type": "number",
                "default": 1000,
                "description": "How long to set to a new random value"
            }
        }
    }
}
